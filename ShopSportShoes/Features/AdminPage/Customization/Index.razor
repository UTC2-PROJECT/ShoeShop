@page "/admin/custom"
@using ShopSportShoes.Features.AdminPage.Customization.Components
@inject ShoeConfigService ShoeConfigService

<MudGrid>
    <MudItem xs="4">
        <SizeConfigCard />
    </MudItem>
    <MudItem xs="4">
        <ShoeCatalogConfigCard />
    </MudItem>
    <MudItem xs="4">
        <ItemConfigCard Label="Thêm thương hiệu" ListData="_shoeConfig.Trademarks" 
                        PropName="Trademarks" Data="_shoeConfig"/>
    </MudItem>
</MudGrid>
@code { 
    ShoeConfig _shoeConfig;

    protected override void OnInitialized()
    {
        _shoeConfig = ShoeConfigService.GetAll();
        base.OnInitialized();
    }
}
